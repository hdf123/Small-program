page{
  color:white;
  background:black;
}
.content{
  width:100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background:rgba(0, 0, 0, 0.1);
}
.content image{
  width:80%;
}
.instructions{
  box-sizing:border-box;
  width:690rpx;
  display: flex;
  align-items: flex-end;
  margin:73rpx auto 0;
}
.instructions>view:nth-child(1){
  width:80%;
}

.conditions{
  display: flex;
}
.conditions view{
  font-size: 32rpx;
  margin-right:15rpx;
}
.muns{
  font-size: 32rpx;
  color: #d8b87b;
  margin-top:20rpx;
}
.btn{
  width: 130rpx;
	height: 46rpx;
  color: #333333;
  font-size: 24rpx;
  text-align: center;
  line-height:46rpx;
	background-color: #f5f5f5;
	border-radius: 23rpx;
}