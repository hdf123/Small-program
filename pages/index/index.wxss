/**index.wxss**/
page{
  background-color:#F5F5F5;
}
.bgs_box{
  height:280rpx;
  background: #211B1D;
  position:relative;
}
.ban_content{
  width:662rpx;
  height:202rpx;
  background:white;
  border-top-left-radius:10rpx;
  border-top-right-radius:10rpx;
  position: absolute;
  left:44rpx;
  bottom:0;
  display:flex;
  align-items: center;
}
.ban_content>image:nth-child(1){
  width:140rpx;
  height:140rpx;
  border-radius:50%;
  background:rgba(236, 231, 231, 0.5);
  margin-left:30rpx;
}
.ban_content text{
  width:260rpx;
  height:140rpx;
  margin-left:20rpx;
  font-family: PingFang-SC-Bold;
  font-weight:bold;
  line-height:140rpx;
}
.ban_content>image:nth-child(3){
  width:180rpx;
	height:56rpx;
  position:absolute;
  right:0;
}
.tab-box{
  padding:0 5%;
  display:flex;
  align-items:center;
  background:#ffffff;
}
.tab-box navigator{
  width:50%;
  height:150rpx;
  display:flex;
  align-items:center;
  justify-content:space-around;
}
.segmentation{
  width:2rpx;
  height:88rpx;
  background-color:#e5e5e5;
}
.tab-box navigator image{
  width:86rpx;
}
.share{
  height:220rpx;
  background:#F5F5F5;
}
.share image{
  margin:20rpx 0;
  width:100%;
  height:180rpx;
}
.mlist{
  height:90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #ffffff;
  padding:0 44rpx;
  border-bottom:1rpx solid #e5e5e5;
}
.mlist image{
  width:12rpx;
  height:22rpx;
}