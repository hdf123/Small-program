/* 搜索 */
.search_box{
	width:662rpx;
	height: 56rpx;
	background-color: #f5f5f5;
	border-radius: 4rpx;
  margin:0 auto;
  display: flex;
  position:relative;
}
.search_box>view{
  width:56rpx;
  height:100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.search_input{
  width:300rpx;
  height:100%;
  line-height:56rpx;
  font-size: 24rpx;
}
/* 选择 */
.swiper-tab{  
  width: 100%;  
  border-bottom: 2rpx solid #777777;  
  text-align: center;  
  line-height: 80rpx;
  display: flex;
}  
.swiper-tab-list{  
  font-size: 30rpx;
  width:25%;  
  color: #777777; 
  display: flex;
  align-items: center;
  justify-content:center; 
}
.on{
  color: #da7c0c;
}
/* 三角形 */
.triangle{
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 20rpx solid #a1a1a1;
  margin-left:10rpx;
  z-index:-1;
}
.triangles{
  border-top: 20rpx solid #da7c0c;
}
/* 下拉列表 */
.swiper-box{ 
  display: block; 
  height:100%; 
  width: 100%;
  background:rgba(2, 2, 2, 0.3);
  overflow: hidden; 
}  
.swiper-box view{  
  text-align:center;  
} 
.scrollk{
  height:400rpx;
} 
.scrollks{
  height:800rpx;
}
checkbox-group{
  display: flex;
  flex-direction: column;
}
.checkbox{
  line-height:100rpx;
  border-bottom:1px solid #cccccc;
  display: flex;
  justify-content: space-between;
  padding:0 6%;
  background: white;
  font-size:30rpx;
}
.hiddens{
  display:none;
}
.is_checked{
  color:#da7c0c;
}
.btn{
  width:100%;
  height:130rpx;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.btn>button{
  width:80%;
  color:#ffffff;
  background:#d8b87b;
}
.btns{
  display: flex;
  margin-top:20rpx;
}
.btns>button{
  width:45%;
}